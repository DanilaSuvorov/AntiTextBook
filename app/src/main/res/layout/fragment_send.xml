<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/send"
    tools:context=".Send">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_mainText"
            android:textColor="#000"
            android:fontFamily="@font/rubik_medium"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cообщите о своей проблеме или напишите отзыв"
            android:textColor="#000"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/nameOfFeedback"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/rubik_medium"
            android:hint="@string/send_title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/emailOfFeedback"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/rubik_medium"
            android:hint="Ваш email для обратной связи"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/describingOfFeedback"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="@string/send_describing"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/sendFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_gradient"
            android:text="@string/send_sendLater" />

    </LinearLayout>

</FrameLayout>