<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_of_app"
    tools:context=".SchoolProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SchoolProfileMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/school_profile_main"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="32dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/text_profile"
                            android:fontFamily="@font/roboto_light"
                            android:padding="14dp"
                            android:text="@string/school_profile_string1"
                            android:textColor="#6221d8"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/NameOfSchool"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="40dp"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="#6221d8"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/text_profile"
                            android:fontFamily="@font/roboto_light"
                            android:padding="14dp"
                            android:text="@string/school_profile_string2"
                            android:textColor="#6221d8"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/EmailOfSchool"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="#6221d8"
                            android:textSize="12sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/school_profile_second"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/AllBooksForCheck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_profile"
                            android:fontFamily="@font/roboto_light"
                            android:padding="10dp"
                            android:text="@string/school_profile_all_books"
                            android:textColor="#FFFFFF"
                            android:translationZ="10dp" />

                        <Button
                            android:id="@+id/UploadBookFromSchool"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_profile"
                            android:fontFamily="@font/roboto_light"
                            android:padding="10dp"
                            android:text="@string/school_profile_upload_books"
                            android:textColor="#FFF"
                            android:translationZ="10dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/sendEmailAgain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/button_profile"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/school_profile_send_email_again"
                        android:textColor="#FFF"
                        android:translationZ="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">


                    <Button
                        android:id="@+id/singOutFromSchoolProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/button_gradient"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/school_profile_sing_out"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:translationZ="10dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>