<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cloud">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="что то" />

            <Button
                android:id="@+id/buttonChoosePDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Загрузка pdf" />

            <Button
                android:id="@+id/buttonDownloadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выбор изображения" />

            <ImageView
                android:id="@+id/checkImage"
                android:layout_width="80dp"
                android:layout_height="63dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Помощь" />

            <EditText
                android:id="@+id/textAuthorCloud"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Автор" />

            <EditText
                android:id="@+id/textSubjectCloud"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Предмет" />

            <EditText
                android:id="@+id/textClassCloud"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Класс" />

            <EditText
                android:id="@+id/textYearCloud"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Год" />

            <EditText
                android:id="@+id/textPartCloud"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Часть" />

            <Button
                android:id="@+id/buttonSendToCloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отправить" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>